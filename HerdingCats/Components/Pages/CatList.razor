@page "/cats"
@rendermode InteractiveServer

@using HerdingCats.Components.DataGrid
@using HerdingCats.Data.Model

<RadzenColumn>
    <Grid TItem=@Cat ComponentName="cats" Data=@Cats>
        <Columns>
            <NumericColumn TItem=@Cat TValue=@int Title="Number" Property="SecondaryId" />
            <TextColumn TItem=@Cat Title="Name" Property="Name" />
            <DateColumn TItem=@Cat Title="Intake Date" Property="IntakeDate" />
        </Columns>
    </Grid>
</RadzenColumn>

@code
{
    [Parameter]
    public List<Cat>? Cats { get; set; } =
    [
        new Cat() { SecondaryId=1, Name="A", IntakeDate=new DateOnly() }
    ];

    private Cat? editingCat;

    private void OnCellClick(DataGridCellMouseEventArgs<Cat> args)
    {
        editingCat = args.Data;
    }
}